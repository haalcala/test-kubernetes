FROM python:3.6.6-alpine

ARG PYTHON_HELLO_WEB_VERSION=1111
ARG PYTHON_HELLO_WEB_INTERNAL_SVC_HOST=localhost
ARG PYTHON_HELLO_WEB_MSG="Hello World !!!!"

ENV PYTHON_HELLO_WEB_VERSION $PYTHON_HELLO_WEB_VERSION
ENV PYTHON_HELLO_WEB_INTERNAL_SVC_HOST $PYTHON_HELLO_WEB_INTERNAL_SVC_HOST
ENV PYTHON_HELLO_WEB_MSG $PYTHON_HELLO_WEB_MSG

RUN echo \$PYTHON_HELLO_WEB_VERSION $PYTHON_HELLO_WEB_VERSION
RUN echo \$PYTHON_HELLO_WEB_MSG $PYTHON_HELLO_WEB_MSG

copy . /app

WORKDIR /app

RUN pip3 install -r requirements.txt

EXPOSE 5000
ENTRYPOINT ["python3"]

CMD ["HelloWeb.py", "> /dev/stdout"]

