FROM python:3.6.6-alpine

ARG PYTHON_HELLO_WEB_INTERNAL_VERSION=1111

ENV PYTHON_HELLO_WEB_INTERNAL_VERSION $PYTHON_HELLO_WEB_INTERNAL_VERSION

RUN echo \$PYTHON_HELLO_WEB_INTERNAL_VERSION $PYTHON_HELLO_WEB_INTERNAL_VERSION

copy . /app

WORKDIR /app

RUN pip3 install -r requirements.txt

EXPOSE 5000
ENTRYPOINT ["python3"]

CMD ["HelloWebInternal.py"]

